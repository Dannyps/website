  <div class="row" id="countdown-row">
    <div class="col-sm-1 col-md-2 col-lg-3 col-xl-3"></div>
    <div id="countdown" class="col-sm-10 col-md-8 col-lg-6 col-xl-6"></div>
    <div class="col-sm-1 col-md-2 col-lg-3 col-xl-3"></div>
